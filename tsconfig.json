{
  "include": ["src/**/*"],
  "exclude": ["src/@types/__generated__/globalTypes.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@adelerium/*": ["src/*"]
    },

    /* Basic Options */
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
