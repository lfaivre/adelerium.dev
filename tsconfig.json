{
  "include": ["src/**/*"],
  "exclude": ["src/@types/__generated__/globalTypes.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@adelerium/*": ["src/*"] },
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true
  }
}
