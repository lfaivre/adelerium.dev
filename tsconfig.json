{
  "include": ["./src/**/*"],
  "exclude": ["src/@types/__generated__/globalTypes.d.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@adelerium/*": ["src/*"],
      "@adelerium/components/*": ["src/components/*"],
      "@adelerium/graphql/*": ["src/graphql/*"],
      "@adelerium/images/*": ["src/images/*"],
      "@adelerium/pages/*": ["src/pages/*"],
      "@adelerium/shared/*": ["src/shared/*"],
      "@adelerium/utils/*": ["src/utils/*"]
    },

    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
